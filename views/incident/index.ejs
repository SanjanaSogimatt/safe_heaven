<body>
    <%- include('../partials/navbar') %>

    <h1 class="text-center">Some of the incident that took place in our community</h1>
    <% for(let incident of incidents) { %>
        <div class="row">
            <div class="col-6 offset-3">
        <div class="card mt-5 mb-3 style="width:30rem">
            <div class="card-body">
        <h2 class="card-title text-center m-2"><%= incident.title %></h2>
        <h2 class="card-subtitle fs-5"><span class="fs-4 fw-semibold">Happened at: </span><%= incident.location %></h2>
        <p class="card-text fs-5"><%= incident.description %></p>
        <h3  class="fs-4 fw-semibold">A message for everyone</h3>
        <p class="fs-5"><%= incident.message %></p>
        <h3 class="fs-5 fw-semibold">Reported by <%= incident.name %> on <%= incident.date %></h3>
        <a href="/community/<%= incident._id %>" class="card-link btn btn-primary mt-4">Know more</a>
    </div>
</div>
</div>
</div>
        <% } %>
        <div class="row">
            <div class="col-6 offset-4">
        <a href="/community/new" class="btn btn-danger m-3">Witnessed a new incident?</a>
        <a href="/community/safety" class="btn btn-success">Know more about safety</a>
    </div>
    </div>
        <%- include('../partials/footer') %>
        